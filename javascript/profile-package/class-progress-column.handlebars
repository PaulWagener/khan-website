<div class="fake-row">
  {{#progressIter progress side=progressSide}}
    <span class="status exercise-color {{toColor status}}" style="float: {{toFloat status}}; width: {{toPixelWidth students.length}}px;" data-width="{{toPixelWidth students.length}}" data-status="{{toDisplay status}}" data-num="{{students.length}}"><span>{{#if students.length}}{{students.length}}{{/if}}</span></span>
   {{/progressIter}}
</div>

<div style="clear: both;"></div>

<div class="student-list">
  {{#progressIter progress side=progressSide}}
    <div class="exercise-color {{toColor status}}" style="float: {{toFloat status}}; width: 100px; min-height:1px">
      <table>
        {{#each students}}
        <tr><td>
        <a class="student-link" href="#" data-exercise="{{../../name}}" data-email="{{email}}">{{nickname}}</a>
        </td></tr>
        {{/each}}
      </table>
    </div>
  {{/progressIter}}
</div>
