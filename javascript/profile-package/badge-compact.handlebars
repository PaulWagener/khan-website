{{#if emptyBadge}}

<div class="achievement-badge empty">
  <div id="outline-box">
  EMPTY SLOT - replace with pretty asset
  <div class="selected-indicator"> </div>
  </div>
</div>

{{else}}

<div class="achievement-badge achievement-badge-owned{{#if used}} used{{/if}}" id="{{name}}">
  <div id="outline-box">
    <div class="achievement-title">{{description}}</div>
    <img class="badge-icon" src="{{iconSrc}}">
    <div>
      <div class="energy-points-badge">{{points}}</div>
      {{#if count}}<div class="achievement-count">x{{count}}</div>{{/if}}
    </div>
    <div class="delete-icon">X</div>
    <div class="selected-indicator"> </div>
  </div>
</div>

{{/if}}
