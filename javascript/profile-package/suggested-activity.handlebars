<div class="activity-list suggested-list">
    <ul>
    {{#each exercises}}
        <li class="activity-exercise clearfix">
            <span class="activity-image"></span>
            <div class="ach-text">
                <a href="{{toBingoHref url "suggested_activity_click_through_exercise"}}">{{name}}</a>
                <div class="activity-controls">
                {{#with streakBar}}{{> streak-bar}}{{/with}}
                </div>
            </div>
        </li>
    {{/each}}

    {{#each videos}}
        <li class="activity-video clearfix">
            <span class="activity-image"></span>
            <div class="ach-text">
                <a href="{{toBingoHref url "suggested_activity_click_through_video"}}">{{name}}</a>
                <div class="activity-controls">
                </div>
            </div>
        </li>
    {{/each}}

    {{#each goals}}
        <li class="activity-goal clearfix">
            <span class="activity-image"></span>
            <div class="ach-text">
                <a href="{{toBingoHref url "suggested_activity_click_through_goal"}}">{{description}}</a> in {{name}}
                <div class="activity-controls">
                </div>
            </div>
        <p></p>
        </li>
    {{/each}}
    </ul>
</div>
