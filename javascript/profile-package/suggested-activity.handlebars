{{#if exercises}}
    <h3>Exercises</h3>
    {{#each exercises}}
        <p><a href="{{url}}">{{name}}</a></p>
    {{/each}}
{{/if}}

{{#if videos}}
    <h3>Videos</h3>
    {{#each videos}}
        <p><a href="{{url}}">{{name}}</a></p>
    {{/each}}
{{/if}}

{{#if goals}}
    <h3>Goals</h3>
    {{#each goals}}
        <p>Complete {{name}} by going to <a href="{{url}}">{{description}}</a></p>
    {{/each}}
{{/if}}
