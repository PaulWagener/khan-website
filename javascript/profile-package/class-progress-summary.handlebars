<style>
  .exercise-row .exercise-name {
    width: 130px;
    float: left;
    line-height: 1.2;
    text-align: right;
    padding-right: 10px;
  }

  .exercise-row {
    padding-top: 5px;
    padding-bottom: 10px;
    min-width: 690px;
  }

  .exercise-row:hover {
    background-color: #eee;
    cursor: ns-resize;
  }

  .fake-row span {
    height: 15px;
    padding-bottom: 4px;
    display: inline-block;
  }

  .fake-row span.status span {
    text-transform: capitalize;
    padding-left: 8px;
    padding-bottom: 10px;
    font-weight: bold;
  }

  .left-column, .right-column {
    float: left;
  }
  .left-column {
    width: 300px;
  }
  .right-column {
    width: 200px;
  }

  .student-list {
    display: none;
  }

  .student-list td {
    padding-left: 5px;
  }

</style>
<div id="progress-summary-container">
  {{#each exercises}}
    <div class="exercise-row">
      <div class="exercise-name">
        <span>{{display_name}}</span>
      </div>
      <div class="left-column">
        {{#progressColumn side="left"}}
          {{> class-progress-column}}
        {{/progressColumn}}
      </div>

      <div class="right-column">
        {{#progressColumn side="right"}}
          {{> class-progress-column}}
        {{/progressColumn}}
      </div>

      <div style="clear: both;"></div>
    </div>
  {{/each}}
</div>
