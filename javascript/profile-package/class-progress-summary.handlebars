<div id="progress-summary-container">
  <div id="legend" class="fake-row">
      <span class="segment exercise-color struggling"><span>struggling</span></span>
      <span class="segment exercise-color not-started"><span>unstarted</span></span>
      <span class="segment exercise-color started"><span>started</span></span>
      <span class="segment exercise-color proficient"><span>proficient</span></span>
      <span class="segment exercise-color review"><span>review</span></span>
      <div style="clear: both"></div>
  </div>

  {{#each exercises}}
    <div class="exercise-row">
      <div class="exercise-name">
        <span>{{display_name}}</span>
      </div>

      <div id="left-column">
        {{#progressColumn side="left"}}
          {{> class-progress-column}}
        {{/progressColumn}}
      </div>

      <div id="right-column">
        {{#progressColumn side="right"}}
          {{> class-progress-column}}
        {{/progressColumn}}
      </div>

      <div style="clear: both;"></div>
    </div>
  {{/each}}
</div>
