<section class="basic-user-info" style="float: left;">
  <div class="avatar-pic-container" style="float:left;" >
    <img src="{{avatarSrc}}" id="avatar-pic" class="avatar-pic" >
    <div class="avatar-change-overlay" style="display: none">Change avatar</div>
  </div>
  <div class="user-deets">
      <input type="text" value="{{nickname}}" id="nickname"
          placeholder="Enter nickname here" class="inline-editable nickname" style="display: block;">
      <span>Joined <abbr class="timeago" title="{{dateJoined}}">{{dateJoined}}</abbr></span>
      <div class="user-profile-controls">
          <ul class="dropdown">
              <li>
                  <a href="#">Edit profile</a>
                  <ul class="sub_menu">
                      <li><a id="edit-nickname" href="#">Nickname (does nothing)</a></li>
                      <li><a id="edit-username" href="#">Username (click me!)</a></li>
                  </ul>
              </li>
          </ul>
          <div class="add-remove-coach-container">
              <span class="add-remove-coach" style="background-color: white;{{#if isCoachingLoggedInUser}} display: none;{{/if}}float:left;">Add as a coach</span>
              <span class="add-remove-coach" style="background-color: white;{{#unless isCoachingLoggedInUser}} display: none;{{/unless}}float:left;">Remove as a coach</span>
          </div>
      </div>
      <div class="basic-stats clearfix">
          <div class="simple-stat"><img class="summary-icon" src="/images/generic-exercise-icon-shadow.png">{{countExercisesProficient}}/{{countExercises}}</div>
          <div class="simple-stat"><img class="summary-icon" src="/images/video-camera-icon-shadow.png"> {{countVideosCompleted}}/{{countVideos}}</div>
          <div class="simple-stat"><span title="{{points}} energy points" class="energy-points-badge" style="float:none; display:block; margin-bottom: 3px; margin-top: 2px; padding:0; line-height: 20px;">{{points}}</span> Energy Points</div>
      </div>
  </div>
</section>
<section class="summary-and-controls" style="float:right; padding-right: 20px;">
    
</section>
<span id="edit-visibility" style="background-color: white;">imagine a locking/unlocking icon</span>
<div class="sticker-book">
    <a class="display-case-cover" href="javascript:''"></a>
</div>

<div id="edit-profile-container" class="modal fade hide" style="display: none;">
</div>
