{{#if goals}}
  <div class="student-goal-title">{{ title }}</div>
  <div class="student-goals">
  {{#each goals}}
    <div class="goal pulls">
      <p class="goal-description">
        <strong>{{ title }}</strong>
          {{#if ../isCurrent }}<span class="summary-light">(started {{ created_ago }})</span>{{/if}}
          {{#if ../isCompleted }}<span class="summary-light">(completed {{ completed_ago }} in {{ completed_time }})</span>{{/if}}
          {{#if ../isAbandoned }}<span class="summary-light">(abandoned {{ completed_ago }})</span>{{/if}}
        <span class="goal-controls">
          {{#if ../isCurrent }}<a class="simple-button action-gradient" href="javascript: Profile.userGoalsAbandonGoal({{id}})" id="goal-abandon-{{id}}">Abandon</a>{{/if}}
        </span>
      </p>
      <ul class="inline-list objective-list">
      {{#each objectives}}
        {{>goal-objectives}}
      {{/each}}
      </ul>
    </div>
  {{/each}}
  </div>
{{else}}
<div class="new-goal">
    <section class="predefined-goals">
        <a href="#">Any 5 Exercises</a>
        <a href="#">Any 5 Videos</a>
    </section>
    <section class="custom-goals">
        <a href="#">Create A Custom Goal</a>
    </section>
</div>
{{/if}}
