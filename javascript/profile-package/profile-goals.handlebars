{{#if goals}}
  <div class="student-goal-title">{{ title }}</div>
  <div class="student-goals">
  {{#each goals}}
    <div class="goal pulls">
      <p class="goal-description">
        <strong>{{ title }}</strong> <span class="summary-light">(started {{ created_ago }})</span>
        <span class="goal-controls">
          <a class="simple-button action-gradient" href="javascript: Profile.userGoalsAbandonGoal({{id}})" id="goal-abandon-{{id}}">Abandon</a>
        </span>
      </p>
      <ul class="inline-list objective-list">
      {{#each objectives}}
        <li style="width: {{../objectiveWidth}}%">
          <a class="objective simple-button action-gradient {{ statusCSS }} {{ type }}" href="{{ url }}" data-progress="{{ progress }}">
            {{ description }} ({{ progressPercentage }}%)
          </a>
        </li>
      {{/each}}
      </ul>
    </div>
  {{/each}}
  </div>
{{else}}
  <div class="student-goals">
    No goals to show.
    <a class="simple-button action-gradient green" href="javascript:createSimpleGoalDialog.showDialog()">Create a new goal</a>
  </div>
{{/if}}
