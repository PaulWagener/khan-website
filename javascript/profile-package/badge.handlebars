<div class="achievement-badge category-{{badgeCategory}} {{#if isOwned}}achievement-badge-owned{{/if}}" title="{{typeLabel}}: {{safeExtendedDescription}}">
  <div id="outline-box">
  <img src="{{iconSrc}}" id="badge-icon"/>
  <div class="achievement-title">{{description}}</div>
  <div class="achievement-desc achievement-desc-no-count">
    {{safeExtendedDescription}}
  </div>
  {{#if points}}<div class="energy-points-badge">{{points}}</div>{{/if}}
  </div>
</div>
