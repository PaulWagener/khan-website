<div id="class-student-goals">
  <div id="class-goal-filter-desc"></div>
  <div id="class-student-goal">
  {{#each rowData}}
    <div class="goal-row" data-id="{{rowID}}">
      <div class="student-name"><a href="{{ student.profile_url }}">{{ student.nickname }}</a>
        {{#if goal }}
        <span class="goal-count">({{ goal_idx }}/{{ student.goal_count }})</span>
        <div>
          <div class="goal-start-time">Started {{ goal.created_ago }}</div>
          <div class="goal-update-time">Updated {{ goal.updated_ago }}</div>
        </div>
        {{/if}}
      </div>
      <div class="goal">
        <ul class="inline-list objective-list">
        {{#each goal.objectives}}
          <li style="width: {{../goal.objectiveWidth}}%">
            <a data-id="{{objectiveID}}" class="objective simple-button action-gradient exercise-color seethrough {{ statusCSS }} {{ typeCSS }}" href="{{ url }}" data-progress="{{ progress }}">
                <span class="objective-description">{{ description }}</span>
                {{#unless complete}}
                <span class="objective-progress-meter" style="height: {{#if iconFillHeight}}{{iconFillHeight}}{{else}}0{{/if}}px"></span>
                {{/unless}}
            </a>
          </li>
        {{/each}}
        </ul>
      </div>
    </div>
  {{/each}}
  </div>
</div>

