<style>
  #page_sub_nav {
    display: none;
  }
</style>

{{#with profileData}}
<div id="profile-header">
    <span id="high-level-stats">
        <span id="videos-watched">
            <span class="profile-header-icon"><img src="/images/video-camera-icon-shadow.png" ></span>
            <span class="count">
                {{ countVideosCompleted }} / {{ ../countVideos }}<br>
                <span class="label">Videos Completed</span>
            </span>
        </span>
        <span id="exercises-completed" >
            <span class="profile-header-icon"><img src="/images/generic-exercise-icon-shadow.png" ></span>
            <span class="count">
                {{ countExercisesProficient }} / {{ ../countExercises }}<br>
                <span class="label">Proficient Exercises</span>
            </span>
        </span>
        <span id="energy-points">
            <span title="{{points}} energy points" class="energy-points-badge">{{commafy points}}</span><br>
            <span class="label">Total Energy Points</span>
        </span>
    </span>
    <span id="user-info">
        <span id="name">
            {{nickname}}
            <div id="simple-student-info">
                <span class="member-for" style="visibility:hidden">Member since <abbr class="timeago" title="{{dateJoined}}">{{dateJoined}}</abbr></span>
            </div>
        </span>
    </span>
</div>
{{/with}}

<menu class="profile-navigation">
    <ul class="vertical-tab-list">
        <li><a href="{{profileRoot}}/vital-statistics/activity" class="tab-link has-icon no-recolor" rel="vital-statistics activity">Activity</a></li>
        <li><a href="{{profileRoot}}/vital-statistics/focus" class="tab-link has-icon no-recolor" rel="vital-statistics focus">Focus</a></li>
        <li><a href="{{profileRoot}}/vital-statistics/exercise-progress" class="tab-link has-icon no-recolor" rel="vital-statistics exercise-progress">Exercise Progress</a></li>
        <li><a href="{{profileRoot}}/vital-statistics/exercise-progress-over-time" class="tab-link has-icon no-recolor" rel="vital-statistics exercise-progress-over-time">Progress Over Time</a></li>
        <li><a href="{{profileRoot}}/goals" class="tab-link has-icon no-recolor" rel="goals">Goals (beta)</a></li>
    </ul>
</menu>

<section class="tab-content">
    <h2 class="profile-sheet-title"></h2>

    {{#unless profileData.email}}
        <div class="public-profile-notification">
            <h2>Oops, you're not allowed!</h2>
            <p>To view real data, you must be a coach.</p>
        </div>
    {{/unless}}
    <div>
        <div id="tab-content-user-profile" rel="profile">
            <div class="user-info-container"></div>
            <div style="clear: both; margin-bottom: 20px;"></div>
        </div>

        <div id="tab-content-vital-statistics" rel="vital-statistics">
            {{> vital-statistics}}
        </div>

        <div id="tab-content-goals" rel="goals">
            <div class="graph-picker">
                Shows your current, completed and abandoned goals.
                <ul class="tabrow">
                    <li class="type current">
                        <a href="{{profileRoot}}/goals/current" class="graph-link no-recolor">Current</a>
                    </li>
                    <li class="type completed">
                        <a href="{{profileRoot}}/goals/completed" class="graph-link no-recolor">Completed</a>
                    </li>
                    <li class="type abandoned">
                        <a href="{{profileRoot}}/goals/abandoned" class="graph-link no-recolor">Abandoned</a>
                    </li>
                    <li>
                        <a class="new-goal simple-button action-gradient disabled" href="javascript:void(0);" style="display: inline-block;">Create a new goal</a>
                    </li>
                </ul>
            </div>
            <div id="profile-goals-content"></div>
        </div>
    </div>
</section>

<div class="legacy-report">
    <h2>Achievements</h2>
    <div id="tab-content-achievements" rel="achievements"{{#unless profileData.email}} class="empty-chart"{{/unless}}>
    </div>

    <h2>Recent Activity</h2>
    <div id="recent-activity">
    </div>
</div>

