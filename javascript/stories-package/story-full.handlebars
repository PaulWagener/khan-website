<div id="modal-story" class="modal hide">

    <div class="modal-header">
        <a href="#" class="close-button close">x</a>
        <h3>From {{ author }} on {{ date }}</h3>
    </div>

    <div class="modal-body">
        {{#if youtube_id }}
        <object width="100%" height="380" classid="clsid:D27CDB6E-AE6D-11cf-96B8-444553540000">
            <param name="movie" value="http://www.youtube.com/v/{{youtube_id}}?version=3&hl=en_US&fs=1&rel=0&enablejsapi=1">
            <param name="allowFullScreen" value="true">
            <param name="allowScriptAccess" value="always">
            <param name="wmode" value="transparent">
            <embed id="idPlayer" name="idPlayer" wmode="transparent" src="http://www.youtube.com/v/{{youtube_id}}?version=3&hl=en_US&fs=1&rel=0&enablejsapi=1" type="application/x-shockwave-flash" allowScriptAccess="always" allowfullscreen="true" width="100%" height="380">
        </object>
        {{else}}
        {{{ content_html }}}
        {{/if}}
    </div>

    <div class="modal-footer">

        <div class="row">
            <div class="span4">
                <button class="btn prev-btn {{#unless prev_story}}disabled{{/unless}}">&larr; Previous</btn>
            </div>
            <div class="span-middle center">
                Something
            </div>
            <div class="span4 right">
                <button class="btn next-btn {{#unless next_story}}disabled{{/unless}}">Next &rarr;</btn>
            </div>
        </div>

    </div>

</div>
