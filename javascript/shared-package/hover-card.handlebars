<div class="hover-card-container {{#if isInaccessible}}message-only{{/if}}">
    <div class="hover-card-triangle"></div>
    <div class="hover-card-content-container vertical-shadow">
        <div class="hover-card-content clearfix">
            {{#if isInaccessible}}
            <div style="padding-left: 10px">
                Oops, this user doesn't have a public profile!
            </div>
            {{/if}}
            <div class="avatar-pic-container">
                <img src="{{avatarSrc}}" style="width: 50px; height: 50px;">
            </div>
            <div class="user-info">
                {{#unless isInaccessible}}
                    <span class="nickname"><a href="{{profileRoot}}">{{nickname}}</a></span>
                {{/unless}}
                <div class="badge-container">
                    {{#each publicBadges}}
                        {{#if this}}
                            {{#with this}}
                                <img src="{{icons.small}}">
                            {{/with}}
                        {{/if}}
                    {{/each}}
                </div>
            </div>
            <div class="user-stats">
                <div class="points"><span style="font-size: 150%">{{commafy points}}</span> <span style="color: #999">points</span></div>
                <div class="join-date">Joined <abbr class="timeago" title="{{dateJoined}}">{{dateJoined}}</abbr></div>
            </div>
        </div>
    </div>
</div>
