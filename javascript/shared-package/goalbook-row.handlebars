<div class="goal pulled {{#active}}active{{/active}} {{#complete}}recently-completed{{/complete}}" data-id="{{id}}">
    <p class="goal-description pulls"><strong>{{title}}</strong> <span class="summary-light"><span class="objectives-complete">{{objectiveProgress}}/{{objectives.length}}</span> &middot; <span class="percent-complete">{{progressStr}}%</span></p>

    <ul class="inline-list objective-list">
    {{#objectives}}
        <li class="objective" style="width: {{../objectiveWidth}}%">
            <a class="objective simple-button action-gradient {{type}} {{#if complete}}complete seethrough exercise-color started{{else}}blue{{/if}}"
                href="{{url}}"
                data-progress="{{progress}}">
                    {{description}}
                    {{#unless complete}}
                    <span class="objective-progress-meter" style="height: {{iconFillHeight}}px"></span>
                    {{/unless}}
            </a>
        </li>
    {{/objectives}}
    </ul>

    <div style="clear: both;"></div>
</div>
