{
    "chart": {
        "renderTo": "container",
        "plotBackgroundColor": "rgba(35,37,38,0)",
        "backgroundColor": "rgba(35,37,38,100)",
        "borderColor": "rgba(35,37,38,100)",
        "lineColor": "rgba(35,37,38,100)",
        "plotBorderColor": "rgba(35,37,38,100)",
        "plotBorderWidth": null,
        "plotShadow": false,
        "height": 340,
        "type": "areaspline"
    },
    "colors": [ "#058DC7", "#50B432", "#EF561A" ],
    "credits": { "enabled": false },
    "title": { "text": "{{ title }}" },
    "legend": { "enabled": {{ showLegend }} },
    "plotOptions": {
        "areaspline": {
            "dataLabels": { "enabled": false },
            "size": "100%"
        }
    },
    "series": [
        {% for data in series %}
            {
                "data": {{ data.values }},
                "name": "{{ data.name }}",
                "yAxis": {{ data.axis }},
            }{% if not forloop.last %},{% endif %}
        {% endfor %}
    ],
    "yAxis": [
        {% for axis in axes %}
            {
                "title": { "text": null },
                "max": {{ axis.max }},
                "labels": {
                    {% if forloop.last %}
                        "style": { "color": "#50B432" }
                    {% else %}
                        "style": { "color": "#058DC7" }
                    {% endif %}
                }
                {% if forloop.last %}
                    , "opposite": true
                {% endif %}
            }{% if not forloop.last %},{% endif %}
        {% endfor %}
    ],
    "xAxis": {
        "type": "datetime",
        "dateTimeLabelFormats": {
            "day": "%a %e %b"
        },
        "plotLines": [
            {
                "width": 2,
                "value": {{ minXValue }},
                "color": "#058DC7"
            },
            {
                "width": 2,
                "value": {{ maxXValue }},
                "color": "#50B432"
            },
            {
                "width": 2,
                "value": {{ maxXValue }},
                "color": "#EF561A"
            }
        ],
    }
}
